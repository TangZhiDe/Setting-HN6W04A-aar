<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80px">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="78px">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/bt_device_name"
            android:textSize="26px"
            android:maxWidth="400px"
            android:layout_marginLeft="41px"
            android:textColor="@color/bt_normal_color"
            android:singleLine="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="150px"
            android:id="@+id/bt_device_state"
            android:textSize="20px"
            android:visibility="gone"
            android:layout_marginLeft="16px"
            android:textColor="@color/bt_unselect_color"
            android:singleLine="true"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>


            <ImageView
                android:layout_width="80px"
                android:visibility="gone"
                android:scaleType="center"
                android:src="@drawable/select_setting_bt_delete"
                android:id="@+id/bt_device_delete"
                android:layout_height="80px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/line"
        android:scaleType="fitXY"
        android:layout_height="2px" />


</LinearLayout>